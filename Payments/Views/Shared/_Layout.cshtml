<!DOCTYPE html>
<html lang="en" data-theme="aqua">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - Payment.io</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/Payments.styles.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/css/styles.css" asp-append-version="true"/>
    <link href="~/css/output.css" rel="stylesheet">
</head>
<body data-theme="aqua" class="theme-aqua">
<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm  border-bottom box-shadow mb-3">
        <div class="container-fluid">
            <a class="navbar-brand  hover:text-pink-100" asp-area="" asp-controller="Home" asp-action="Index">Payments</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class=" bg-neutral navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item font-medium">
                        <a class="nav-link text-dark hover:text-pink-100" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                    </li>
                    <li class="nav-item font-medium">
                        <a class="nav-link text-dark hover:text-pink-100" asp-area="" asp-controller="Home" asp-action="Purchases">View Purchases</a>
                    </li>
                    <li class="nav-item font-medium">
                        <a class="nav-link text-dark hover:text-pink-100" asp-area="" asp-controller="Home" asp-action="AddPurchases">Add Purchases</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
</header>
<div class="container">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>

<footer class="border-top footer text-white">
    <div class="container">
        &copy; 2024 - Payment.io - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
    </div>
</footer>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>